- Operadores
-----------------------------------------------------------------------
   // Operadores aritméticos(matemáticos)
  
  let salario = 100;

// + , - , * , / , **

console.log(salario + salario);
console.log(salario-salario)
console.log(salario * salario)
console.log(salario / salario)
console.log(salario ** salario)

var idade = 18;

console.log(idade--);
console.log(idade);
