-----------------------------------------------------------------------
  - Operadores igualdade
-----------------------------------------------------------------------
  //Igualdade estrita

console.log ( 1 === 1);
console.log ('1' === 1 );

//igualdade solta
console.log (1 == 1);
console.log ('1' == 1);
----------------------------------------------------------------------
//Operadores Ternários

